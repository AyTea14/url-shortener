<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>URL Shortener</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        />
    </head>
    <body class="bg-dark">
        <div class="container">
            <h1 class="text-white">URL Shortener</h1>
            <form action="/api/url/shorten" method="post" class="my-2 row row-cols-lg-auto g-3 align-items-center">
                <label for="longUrl" class="text-white">Long URL</label>
                <input
                    required
                    placeholder="Your URL"
                    type="url"
                    name="longUrl"
                    id="longUrl"
                    class="form-control col mr-2"
                />
            </form>
            <form class="my-2 row row-cols-lg-auto g-3 align-items-center" s>
                <label for="longUrl" class="text-white">Short URL</label>
                <input
                    required
                    placeholder="Your URL"
                    type="url"
                    name="longUrl"
                    id="longUrl"
                    class="form-control col mr-2"
                />
                <div class="justify-content-md-end">
                    <button type="submit" class="btn btn-primary me-md-2">Shorten</button>
                </div>
            </form>

            <table class="table table-dark table-bordered border-white">
                <thead>
                    <tr>
                        <th class="text-white">Short URL</th>
                        <th class="text-white">Full URL</th>
                        <th class="text-white">Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% shortUrls.forEach((shortUrl) => { %>
                    <tr>
                        <td>
                            <a class="link-primary" href="/<%= shortUrl.urlCode %>" target="_blank" rel="noopener noreferrer"
                                ><%= shortUrl.urlCode %></a
                            >
                        </td>
                        <td class="text-break text-white"><%= shortUrl.longUrl %></td>
                        <td class="text-white"><%= shortUrl.clicks %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </body>
</html>
